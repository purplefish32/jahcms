{% extends 'ProbesysCmsBundle::admin.html.twig' %}

{% block headline %}
Post list <a href="{{ path('admin_post_new') }}" class="btn">New</a>
{% endblock headline %}

{% block content %}
<div class="span10">
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Cat√©gory</th>
                <th>Key words</th>
